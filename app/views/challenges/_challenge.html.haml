- if challenge
  %form.form-horizontal{role: 'form', id: 'challenge'}
    %label#challenge_id.hidden
      = challenge.id
    - challenge.all_questions.shuffle.each do |question|
      - question_id = "question_#{question.id}"
      .form-group
        %label.control-label.col-sm-2{for: question_id}
          %script{type: 'math/tex'}
            = "#{question.problem_latex} = "
        .col-sm-2
          %input.form-control{id: question_id, name: question_id, type: 'number'}/
        .col-sm-3
          %script{type: 'math/tex'}
            = question.appendix_latex
        .col-sm-1
          %span.wrong{class: question_id}
        .col-sm-4
          &nbsp;
    .form-group
      %label.col-sm-2.control-label{for: 'username'} Your name
      .col-sm-4
        - username = current_user.name if current_user
        %input#username.form-control{name: 'username', placeholder: username, type: 'text'}/
    .form-group
      .col-sm-offset-2.col-sm-10
        %button.btn.btn-default{type: 'submit'} Submit
