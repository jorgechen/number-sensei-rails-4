!!!
%html
  %head
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}
      %title= content_for?(:title) ? yield(:title) : NumberSenseiRails4::Application.config.app_title
      %meta{:content => content_for?(:description) ? yield(:description) : NumberSenseiRails4::Application.config.app_description, :name => 'description'}
        = stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css'
        = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css'
        = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css'
        = stylesheet_link_tag 'application', :media => 'all'
        = javascript_include_tag 'application'
        = javascript_include_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js'
        = csrf_meta_tags
        = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Rum+Raisin|Roboto+Slab:400,700|Open+Sans:400,700', :media => 'all'
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/navigation'
    #main{:role => 'main'}
      .container#notifications
        = render 'layouts/messages'
      = yield
    -#= render 'layouts/footer'

